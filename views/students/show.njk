{% extends 'layout.njk' %}

{% block content %}

<div class="card">

<section 
        class="avatar"
        style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
<section class="details">
<h3>Descrição</h3>

<div class="item">
<div>Aluno</div>
<div>{{ student.name }}</div>
</div>

<div class="item">
<div>Idade</div>
<div>{{ student.birth }}</div>
</div>

<div class="item">
<div>Escolaridade</div>
<div>
<select name="grade">
<option 
value="6º Ano do Ensino Fundamental"{% if student.grade == "6º Ano do Ensino Fundamental"%}select{% endif %}>
6º Ano do Ensino Fundamental
</option>
<option 
value="7º Ano do Ensino Fundamental"{% if student.grade == "7º Ano do Ensino Fundamental"%}select{% endif %}>
7º Ano do Ensino Fundamental
</option>
<option 
value="8º Ano do Ensino Fundamental"{% if student.grade == "8º Ano do Ensino Fundamental"%}select{% endif %}>
8º Ano do Ensino Fundamental
</option>
<option 
value="9º Ano do Ensino Fundamental"{% if student.grade == "9º Ano do Ensino Fundamental"%}select{% endif %}>
9º Ano do Ensino Fundamental
</option>
<option 
value="1º Ano do Ensino Médio"{% if student.grade == "1º Ano do Ensino Médio"%}select{% endif %}>
1º Ano do Ensino Médio
</option>
<option
value="2º Ano do Ensino Médio"{% if student.grade == "2º Ano do Ensino Médio"%}select{% endif %}>
2º Ano do Ensino Médio
</option>
<option 
value="3º Ano do Ensino Médio"{% if student.grade == "3º Ano do Ensino Médio"%}select{% endif %}>
3º Ano do Ensino Médio
</option>
</select>
</div>
</div>

<div class="item">
<div>Email</div>
<div>{{ student.email }}</div>
</div>


<div class="item">
<div>Ano letivo</div>
<div>{{ student.grade }}</div>
</div>

<div class="item">
<div>Carga horária por semana</div>
<div>{{ student.workload }}</div>
</div>

<a id="editar" href="/students/{{ student.id }}/edit" class="button">Editar</a>
</section>
</div>

{% endblock content %}