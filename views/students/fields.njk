<div class="item">
<div>Avatar</div>
<div>
<input 
    type="url"
    name="avatar_url"
    placeholder="http://"
    value = "{{ teacher.avatar_url }}"
    >
</div>
</div>

<div class="item">
<div>Aluno</div>
<div>
<input 
    type="text"
    name="name"
    placeholder="Nome do Professor"
    value = "{{ teacher.name }}"
    >
</div>
</div>

<div class="item">
<div>Data de Nascimento</div>
<div>
<input 
    type="date"
    name="birth"
    value="{{ teacher.birth }}">
</div>
</div>

<div class="item">
<div>E-mail</div>
<div>
<input 
    type="email"
    name="email"
    value="{{ teacher.email }}">
</div>
</div>

<div class="item">
<div>Ano Escolar</div>
<div>

<select name="schoolyear"></select>
<option value="6º Ano EF" {%if student.schoolyear == "6º Ano EF"%}select{%endif%}>6º Ano do Ensino Fundamental</option>
<option value="7º Ano EF"{%if student.schoolyear == "7º Ano EF"%}select{%endif%}>7º Ano do Ensino Fundamental</option>
<option value="8º Ano EF"{%if student.schoolyear == "8º Ano EF"%}select{%endif%}>8º Ano do Ensino Fundamental</option>
<option value="9º Ano EF"{%if student.schoolyear == "9º Ano EF"%}select{%endif%}>9º Ano do Ensino Fundamental</option>
<option value="1º Ano EM">1º Ano do Ensino Médio</option>
<option value="2º Ano EM">2º Ano do Ensino Médio</option>
<option value="3º Ano EM">3º Ano do Ensino Médio</option>

</div>
</div>

<div class="item">
<div>Carga Horária Semanal</div>
<div>
        <input 
        type="number"
        name="workload"
        placeholder="Preencha o valor em horas"
        value="{{ teacher.workload }}">
</div>
</div>

<button id="editar" type="submit">Salvar</button>


