<div class="item">
<div>Avatar</div>
<div>
<input 
    type="url"
    name="avatar_url"
    placeholder="http://"
    value = "{{ teacher.avatar_url }}"
    >
</div>
</div>

<div class="item">
<div>Professor</div>
<div>
<input 
    type="text"
    name="name"
    placeholder="Nome do Professor"
    value = "{{ teacher.name }}"
    >
</div>
</div>

<div class="item">
<div>Data de Nascimento</div>
<div>
<input 
    type="date"
    name="birth"
    value="{{ teacher.birth }}">
</div>
</div>

<div class="item">
<div>Escolaridade</div>
<div>
<select name="graduation">
<option value="medio"
        {% if teacher.graduation == "medio" %}
        {% endif %}
        >Ensino Médio Completo
</option>
<option value="superior"
        {% if teacher.graduation == "superior" %}
        {% endif %}
        >Ensino Superior Completo
</option>
<option value="mestrado"
        {% if teacher.graduation == "mestrado" %}
        {% endif %}
        >Mestrado
</option>
<option value="doutorado"
        {% if teacher.graduation == "doutorado" %}
        {% endif %}
        >Doutorado
</option>
</select>
</div>
</div>

<div class="item">
<div>Tipo de aula</div>
<div>
<span>
<input type="radio"
        name="classes"
        value="ead"
        {% if teacher.classes == "ead" %}
        checked
        {%endif %}
        >À distância 
</span>
<span>
<input type="radio"
        name="classes"
        value="P"
        {% if teacher.classes == "P" %}
        checked
        {%endif %}
        >Presencial
</span>

</div>
</div>

<div class="item">
<div>Acompanhamento</div>
<div>
        <input 
        type="text"
        name="services"
        placeholder="Separar os serviços por vírgula"
        value="{{ teacher.services }}">
</div>
</div>

<button id="editar" href="/teachers/:id/edit">Salvar</button>
</section>
</div>
