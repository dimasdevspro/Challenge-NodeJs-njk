{% extends 'layout.njk' %}

{% block content %}

<div class="card">

<section 
        class="avatar"
        style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
<section class="details">
<h3>Descrição</h3>

<div class="item">
<div>Professor</div>
<div>{{ teacher.name }}</div>
</div>

<div class="item">
<div>Idade</div>
<div>{{ teacher.age }}</div>
</div>

<div class="item">
<div>Escolaridade</div>
<div>{{ teacher.graduation }}</div>
</div>

<div class="item">
<div>Tipo de aula</div>
<div>
<span>{{ "À distância" if teacher.classes == "EAD" else "Presencial" }}</span>
</div>
</div>

<div class="item">
<div>Acompanhamento</div>
<div>
        {% for service in teacher.services %}
        {{ service }}
        {% endfor %}
</div>
</div>

<div class="item">
<div>Desde</div>
<div>{{ teacher.created_at }}</div>
</div>

</section>
</div>

{% endblock content %}